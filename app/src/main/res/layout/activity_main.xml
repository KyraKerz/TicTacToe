<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="248dp"
            android:layout_height="37dp"
            android:text="Spieler X ist an der Reihe"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintHorizontal_bias="0.558" app:layout_constraintVertical_bias="0.01"
            android:id="@+id/statusText" app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            android:layout_marginTop="8dp"/>
    <TableLayout
            android:layout_width="360dp"
            android:layout_height="0dp"
            android:id="@+id/tableLayout" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/statusText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@android:color/black">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f0" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f1" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light" android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f2" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f3" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light" android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f4" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light" android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp" android:layout_marginBottom="1dp" android:layout_marginTop="1dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f5" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light" android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f6" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/f7" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light" android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f8" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:background="@android:color/background_light"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>